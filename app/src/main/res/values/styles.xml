<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Old Styles -->
    <style name="ItemTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="label">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="itemData">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_color</item>
    </style>

    <style name="mainButton">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="deleteButton">
        <item name="android:background">@drawable/delete_btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="input">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:minHeight">@dimen/_50dp</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:textAppearance">@style/itemData</item>
    </style>

    <!-- Main App Styles -->
    <style name="circle_image">
        <item name="cornerSize">50%</item>
    </style>

    <style name="label_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray_text</item>
    </style>

    <style name="large_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="main_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="side_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="main_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="error_text">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tab_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="input_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>